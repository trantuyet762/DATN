@model WebBanHangOnline.Models.EF.ProductQuantity
@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productquantity" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới sản phẩm</h3>


        </div>

        <div class="card-body">
            @using (Html.BeginForm("Add", "ProductQuantity", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <label for="exampleInputEmail">Sản phẩm</label>
                    @Html.DropDownListFor(x => x.ProductId, ViewBag.Product as SelectList, "- Chọn sản phẩm - ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductId, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Tên size</label>
                    @Html.DropDownListFor(x => x.SizeId, ViewBag.Size as SelectList, "- Chọn size - ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.SizeId, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Tên màu</label>
                    @Html.DropDownListFor(x => x.ColorId, ViewBag.Color as SelectList, "- Chọn màu - ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ColorId, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Số lượng</label>
                    @Html.TextBoxFor(x => x.QuantityProduct, new { @class = "form-control", @placeholder = "Số lượng" })
                    @Html.ValidationMessageFor(x => x.QuantityProduct, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <a href="/admin/productquantity" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>

            }
            <!-- /.tab-content -->
        </div><!-- /.card-body -->

    </div>





</section>

