@model IEnumerable<WebBanHangOnline.Models.EF.ProductImage>
@{
    ViewBag.Title = "Ảnh sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";


}
<style>
    .gImage{
        list-style: none;
        margin:0;
        padding:0;
        display: flex;
    }
    .gImage li{
        display: inline-block;
        position: relative;

    }
    .box-btn{
        position: absolute;
        bottom:0 ;
        left: 0;
        width: 100%;
        text-align: center;

    }
    
  </style>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ảnh sản phẩm</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-danger" title="collapse">
                   Xóa
                </button>
                
                <input type="button" value="Tải ảnh" class="btn btn-success" onclick="BrowseSever('txtImage');" />
            </div>
        </div>
        <div class="card-body">
            <ul class="gImage">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {

                <li id="trow_@item.id">
                    <img src="@item.Image" width="200" />
                    <div class="box-btn">
                        <a href="#" data-id="@item.id" class="btn btn-sm btn-danger btnDelete"><i class="fa fa-trash"></i></a>
                        @if(item.IsDefault)
                        {
                            <a href="#" data-id="@item.id" class="btn btn-sm btn-success btnDefault"><i class="fa fa-check"></i></a>
                        }
                        <a href="#" data-id="@item.id" class="btn btn-sm btn-warning btnDefault"><i class="fa fa-times"></i></a>
                    </div>
                </li>

                    }
                }
            </ul>
        </div>
        <div class="card-footer">
         
        </div>
    </div>
</section>
<script>
    function BrowseSever(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            AddImage(@ViewBag.productId, fileUrl);

        };
        finder.popup();
    }
    function AddImage(id, url) {
        $.ajax({
            url: '/admin/productimages/AddImage',
            type: 'POST',
            data: { productId: id, url:url },
            success: function (rs) {
                if (rs.Success) {
                    window.location.reload();
                }
            }
        });
    }
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data('id');
            var conf = confirm('bạn có muốn xóa ảnh này không');
            if (conf === true) {
                $.ajax({
                    url: '/admin/productimages/delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                });
            }
        });
    });
</script>