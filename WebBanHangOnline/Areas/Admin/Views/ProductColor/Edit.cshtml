@model WebBanHangOnline.Models.EF.ProductColor
@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcolor" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm</h3>


        </div>

        <div class="card-body">
            @if (Model != null)
            {
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "ProductColor", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.id)

                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">

                            <div class="form-group">
                                <label for="exampleInputEmail">Tên </label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tiêu đề" })
                                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail">Sản phẩm</label>
                                @Html.DropDownListFor(x => x.ProductID, ViewBag.Product as SelectList, "- Chọn sản phẩm - ", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ProductID, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Tên màu</label>
                                @Html.DropDownListFor(x => x.ColorID, ViewBag.Color as SelectList, "- Chọn màu - ", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ColorID, null, new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <a href="/admin/productcolor" class="btn btn-danger">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>


                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    }
                </div>
            }

        </div>


    </div>
</section>

