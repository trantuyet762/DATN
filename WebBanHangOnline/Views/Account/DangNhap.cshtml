@using WebBanHangOnline.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}
<link href="~/Content/assets/styles/main_style.css" rel="stylesheet" />


<div class="container" style="margin-top: 160px;">
   <hr/>

    <div class="row">
        <div class="col-md-10">
            <section id="loginForm">
                @using (Html.BeginForm("DangNhap", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Đăng nhập </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="btn btn-default" />
                        </div>
                    </div>
                    <p style="margin-top: 40px;">
                        @Html.ActionLink("Bạn chưa có tài khoản", "DangKy")
                    </p>
                    <a href="/account/ForgotPassword" style="color:#000000">Quên mật khẩu</a>
                  
                }
            </section>
        </div>
      
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}