@model WebBanHangOnline.Models.EF.Sub
<div class="newsletter">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">

                    <p style="text-align:justify; font-size:12px;">Đăng ký nhận tin của chúng tôi và được giảm giá 20% cho lần mua hàng đầu tiên của bạn</p>
                </div>
            </div>
            <div class="col-lg-6">


                @using (Ajax.BeginForm("Subscribe", "Home", new AjaxOptions
                {
                    OnBegin = "OnBeginSub",
                    OnSuccess = "OnSuccessSub",
                    OnFailure = "OnFailureSub"
                }))
                {
                    @Html.AntiForgeryToken()
                    <script>
                        function OnBeginSub() {
                            var email = document.getElementById("newsletter_email").value;
                            if (email === "") {
                                document.getElementById("emailError").style.display = "block";
                                return false; // Ngăn form được submit khi email không được nhập
                            } else {
                                document.getElementById("emailError").style.display = "none";
                            }
                        }

                        function OnSuccessSub(rs) {
                            if (rs.Success) {
                                alert("Thành công");
                            }
                        }
                        function OnFailureSub(rs) {

                        }
                    </script>
                    <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">


                        <input id="newsletter_email" name="Email" type="email" placeholder="Nhập email của bạn" title="Vui lòng nhập lại email!" />
                  


                        <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">Đăng ký</button>


                    </div>
                   

                }
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-6"></div>
            <div class="col-lg-6">
                <div id="emailError" style="color: red; display: none;text-align:right;padding-right: 160px; margin-top: -20px; ">Bạn phải nhập email.</div>
            </div>
        </div>
       
</div>
    </div>
    